                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/settings_storage_back"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:drawablePadding="10dp"
                            android:paddingBottom="5dp"
                            android:paddingEnd="15dp"
                            android:paddingLeft="15dp"
                            android:paddingRight="15dp"
                            android:paddingStart="15dp"
                            android:paddingTop="17dp"
                            android:text="@string/left_arrow"
                            android:textColor="@android:color/white"
                            android:textSize="13sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="Storage configurations"
                            android:textColor="@color/white"
                            android:textSize="20sp" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.1dp"
                        android:layout_marginBottom="12dp"
                        android:layout_marginRight="20dp"
                        android:background="@color/colorAccent" />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Global history cleanup "
                        android:textColor="@color/white"
                        android:textSize="15sp" />


                    <LinearLayout
                        android:id="@+id/history_cleanup_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dip"
                        android:layout_marginTop="10dip"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <TextView
                            android:id="@+id/settings_storage_clock_icon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.1"
                            android:text="@string/clock"
                            android:textSize="25sp" />

                        <me.grantland.widget.AutofitTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dip"
                            android:text="Cleanup time"
                            android:textColor="@color/colorInfoText"
                            android:textColorHint="@color/colorInfoText"
                            android:textSize="17dip" />
                        <!--android:layout_marginStart="20dp"-->

                        <EditText
                            android:id="@+id/settings_storage_history_cleanup_time"
                            android:layout_width="25dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.2"
                            android:gravity="center_horizontal"
                            android:text="0"
                            android:textColor="@color/colorInfoText"
                            android:textSize="20sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:text="min"
                            android:textColor="@color/colorInfoText"
                            android:textSize="17sp" />

